---
import { Image } from "astro:assets";
import heroImage from "../assets/IMG_6915.webp";
import logoImage from "../assets/logo studio encantado.png";

// Placeholder for Google Reviews
---

<section
    class="relative bg-[#5b2b86] text-white min-h-[90vh] flex items-center z-40"
>
    <!-- Background Gradient -->
    <div
        class="absolute inset-0 bg-gradient-to-br from-[#4a1a70] to-[#6a3da0] -z-20"
    >
    </div>

    <div
        class="container mx-auto px-6 h-full flex flex-col md:flex-row items-center relative z-10 w-full pt-12 md:pt-0"
    >
        <!-- Mobile Image (Top) -->
        <div
            class="w-full md:hidden mb-8 rounded-3xl overflow-hidden shadow-2xl"
        >
            <Image
                src={heroImage}
                alt="Corte infantil divertido"
                class="w-full h-64 object-cover object-center"
            />
        </div>

        <!-- Text Content -->
        <div class="w-full md:w-1/2 space-y-8 md:pr-12">
            <!-- Logo -->
            <div class="flex flex-col items-start select-none">
                <Image
                    src={logoImage}
                    alt="Logo Studio Encantado"
                    class="h-24 md:h-32 w-auto object-contain"
                />
            </div>

            <div class="space-y-4">
                <h1
                    class="text-4xl md:text-5xl lg:text-7xl font-bold leading-tight"
                >
                    Bem vindo ao <br />
                    <span class="text-[#ff9100] font-script"
                        >Studio Encantado</span
                    >
                </h1>

                <p class="text-lg md:text-xl font-light text-gray-200 max-w-lg">
                    Salão Infantil Lúdico mais bem avaliado do Brasil!
                </p>
            </div>

            <div class="pt-2">
                <div
                    class="pt-2 relative inline-block text-left"
                    id="hero-cta-container"
                >
                    <button
                        id="hero-cta-trigger"
                        class="inline-flex items-center gap-3 bg-[#ff9100] hover:bg-[#e68200] text-white text-[1.1rem] font-bold py-4 px-12 rounded-full shadow-[0_4px_14px_0_rgba(255,145,0,0.39)] transition transform hover:scale-105 active:scale-95 cursor-pointer"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            fill="currentColor"
                            class="bi bi-whatsapp"
                            viewBox="0 0 16 16"
                        >
                            <path
                                d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"
                            ></path>
                        </svg>
                        AGENDAR AGORA
                    </button>

                    <div
                        id="hero-cta-menu"
                        class="hidden absolute top-full left-1/2 -translate-x-1/2 md:left-0 md:translate-x-0 mt-3 w-72 bg-white rounded-2xl shadow-2xl border border-gray-100 p-2 z-50 animate-in fade-in slide-in-from-top-4 duration-300"
                    >
                        <p
                            class="text-[10px] font-bold text-gray-400 uppercase tracking-widest px-3 py-2"
                        >
                            Escolha uma unidade:
                        </p>
                        <a
                            href="https://api.whatsapp.com/send/?phone=559883150020"
                            target="_blank"
                            class="flex items-center gap-3 px-4 py-3 hover:bg-[#e6fcf5] text-[#5b2b86] hover:text-[#00a884] rounded-xl transition-colors font-bold group/item cursor-pointer"
                        >
                            <div class="w-2 h-2 rounded-full bg-[#ff9100]">
                            </div>
                            Unidade Calhau
                        </a>
                        <a
                            href="https://api.whatsapp.com/send/?phone=559896037330"
                            target="_blank"
                            class="flex items-center gap-3 px-4 py-3 hover:bg-[#e6fcf5] text-[#5b2b86] hover:text-[#00a884] rounded-xl transition-colors font-bold group/item cursor-pointer"
                        >
                            <div class="w-2 h-2 rounded-full bg-[#26a9e1]">
                            </div>
                            Unidade Ponta do Farol
                        </a>
                    </div>
                </div>

                <script>
                    const trigger = document.getElementById("hero-cta-trigger");
                    const menu = document.getElementById("hero-cta-menu");
                    const container =
                        document.getElementById("hero-cta-container");

                    if (trigger && menu) {
                        trigger.addEventListener("click", (e) => {
                            e.stopPropagation();
                            menu.classList.toggle("hidden");
                        });

                        document.addEventListener("click", (e) => {
                            if (!container?.contains(e.target as Node)) {
                                menu.classList.add("hidden");
                            }
                        });
                    }
                </script>
            </div>

            <!-- Google Reviews Badge -->
            <div
                class="bg-[#3d185e]/80 backdrop-blur-md p-3 pr-6 rounded-2xl inline-flex items-center gap-4 border border-white/10 shadow-xl"
            >
                <div class="flex -space-x-3">
                    <img
                        src="https://i.pravatar.cc/100?img=1"
                        alt="User"
                        class="w-10 h-10 rounded-full border-2 border-[#5b2b86]"
                    />
                    <img
                        src="https://i.pravatar.cc/100?img=5"
                        alt="User"
                        class="w-10 h-10 rounded-full border-2 border-[#5b2b86]"
                    />
                    <img
                        src="https://i.pravatar.cc/100?img=9"
                        alt="User"
                        class="w-10 h-10 rounded-full border-2 border-[#5b2b86]"
                    />
                    <img
                        src="https://i.pravatar.cc/100?img=12"
                        alt="User"
                        class="w-10 h-10 rounded-full border-2 border-[#5b2b86]"
                    />
                </div>
                <div>
                    <p
                        class="text-[10px] font-bold uppercase tracking-widest text-gray-300 mb-0.5"
                    >
                        + de 1k de avaliações
                    </p>
                    <div class="flex items-center gap-1.5 font-sans">
                        <span class="text-lg font-bold text-white leading-none"
                            >Google</span
                        >
                        <div class="flex text-[#ff9100] text-sm gap-0.5">
                            ★ ★ ★ ★ ★
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hero Image (Desktop) - Absolutely positioned to right half -->
    <div
        class="absolute inset-y-0 right-0 w-full md:w-[60%] lg:w-[55%] pointer-events-none z-0 hidden md:block"
    >
        <Image
            src={heroImage}
            alt="Corte infantil divertido"
            class="w-full h-full object-cover object-center"
            style="mask-image: linear-gradient(to right, transparent 0%, black 25%); -webkit-mask-image: linear-gradient(to right, transparent 0%, black 25%);"
        />
    </div>
</section>
