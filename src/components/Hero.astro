---
import { Image } from "astro:assets";
import heroImage from "../assets/IMG_6915.webp";

// Placeholder for Google Reviews
---

<section
    class="relative bg-[#5b2b86] text-white overflow-hidden min-h-[90vh] flex items-center"
>
    <!-- Background Gradient -->
    <div
        class="absolute inset-0 bg-gradient-to-br from-[#4a1a70] to-[#6a3da0] -z-20"
    >
    </div>

    <div
        class="container mx-auto px-6 h-full flex flex-col md:flex-row items-center relative z-10 w-full"
    >
        <!-- Text Content -->
        <div class="w-full md:w-1/2 pt-12 md:pt-0 space-y-8 md:pr-12">
            <!-- Logo -->
            <div class="flex flex-col items-start select-none">
                <div
                    class="text-[#ff9100] text-5xl font-script relative leading-none"
                >
                    <span
                        class="text-[#26a9e1] absolute -top-4 -left-4 text-3xl rotate-12"
                        >✂️</span
                    >
                    <span class="relative z-10">Studio</span>
                </div>
                <div
                    class="text-[#ff9100] text-2xl font-script ml-8 leading-none"
                >
                    Encantado
                </div>
            </div>

            <div class="space-y-4">
                <h1
                    class="text-4xl md:text-5xl lg:text-7xl font-bold leading-tight"
                >
                    Bem vindo ao <br />
                    <span class="text-[#ff9100] font-script"
                        >Studio Encantado</span
                    >
                </h1>

                <p class="text-lg md:text-xl font-light text-gray-200 max-w-lg">
                    Salão Infantil Lúdico mais bem avaliado do Brasil!
                </p>
            </div>

            <div class="pt-2">
                <a
                    href="#"
                    class="inline-block bg-[#ff9100] hover:bg-[#e68200] text-white text-[1.1rem] font-bold py-4 px-12 rounded-full shadow-[0_4px_14px_0_rgba(255,145,0,0.39)] transition transform hover:scale-105 hover:shadow-[0_6px_20px_rgba(255,145,0,0.23)]"
                >
                    AGENDAR AGORA
                </a>
            </div>

            <!-- Google Reviews Badge -->
            <div
                class="bg-[#3d185e]/80 backdrop-blur-md p-3 pr-6 rounded-2xl inline-flex items-center gap-4 border border-white/10 shadow-xl"
            >
                <div class="flex -space-x-3">
                    <img
                        src="https://i.pravatar.cc/100?img=1"
                        alt="User"
                        class="w-10 h-10 rounded-full border-2 border-[#5b2b86]"
                    />
                    <img
                        src="https://i.pravatar.cc/100?img=5"
                        alt="User"
                        class="w-10 h-10 rounded-full border-2 border-[#5b2b86]"
                    />
                    <img
                        src="https://i.pravatar.cc/100?img=9"
                        alt="User"
                        class="w-10 h-10 rounded-full border-2 border-[#5b2b86]"
                    />
                    <img
                        src="https://i.pravatar.cc/100?img=12"
                        alt="User"
                        class="w-10 h-10 rounded-full border-2 border-[#5b2b86]"
                    />
                </div>
                <div>
                    <p
                        class="text-[10px] font-bold uppercase tracking-widest text-gray-300 mb-0.5"
                    >
                        + de 1k de avaliações
                    </p>
                    <div class="flex items-center gap-1.5 font-sans">
                        <span class="text-lg font-bold text-white leading-none"
                            >Google</span
                        >
                        <div class="flex text-[#ff9100] text-sm gap-0.5">
                            ★ ★ ★ ★ ★
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hero Image - Absolutely positioned to right half -->
    <div
        class="absolute inset-y-0 right-0 w-full md:w-[60%] lg:w-[55%] pointer-events-none z-0 hidden md:block"
    >
        <Image
            src={heroImage}
            alt="Corte infantil divertido"
            class="w-full h-full object-cover object-center"
            style="mask-image: linear-gradient(to right, transparent 0%, black 25%); -webkit-mask-image: linear-gradient(to right, transparent 0%, black 25%);"
        />
    </div>

    <!-- Mobile Image -->
    <div class="absolute inset-x-0 bottom-0 top-1/2 md:hidden z-0 opacity-40">
        <Image
            src={heroImage}
            alt="Corte infantil divertido"
            class="w-full h-full object-cover object-top"
            style="mask-image: linear-gradient(to bottom, transparent, black 20%);"
        />
    </div>
</section>
