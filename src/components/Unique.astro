---
import { Image } from "astro:assets";
import uniqueImage from "../assets/unique.webp";
---

<section class="py-24 bg-white">
    <div class="container mx-auto px-6">
        <div
            class="flex flex-col md:flex-row items-center gap-12 max-w-6xl mx-auto"
        >
            <!-- Text Content -->
            <div class="w-full md:w-1/2 space-y-6">
                <h2
                    class="text-3xl md:text-5xl font-bold text-[#5b2b86] leading-tight"
                >
                    O que nos torna únicos?
                </h2>

                <div class="w-16 h-1 bg-[#ff9100]"></div>

                <p class="text-gray-600 text-lg leading-relaxed">
                    <strong class="text-gray-800">Há mais de 7 anos</strong>,
                    criamos momentos inesquecíveis com cortes infantis cheios de
                    cuidado, alegria e magia. Aqui, cada criança se transforma
                    em protagonista de um mundo encantado feito só para ela!
                </p>

                <div
                    class="pt-4 relative inline-block text-left"
                    id="unique-cta-container"
                >
                    <button
                        id="unique-cta-trigger"
                        class="inline-flex items-center gap-3 bg-[#00a859] hover:bg-[#008f4c] text-white text-lg font-bold py-4 px-12 rounded-full shadow-lg transition transform hover:scale-105 active:scale-95 cursor-pointer"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            fill="currentColor"
                            class="bi bi-whatsapp"
                            viewBox="0 0 16 16"
                        >
                            <path
                                d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"
                            ></path>
                        </svg>
                        AGENDAR AGORA
                    </button>

                    <div
                        id="unique-cta-menu"
                        class="hidden absolute top-full md:left-0 left-1/2 -translate-x-1/2 md:translate-x-0 mt-3 w-72 bg-white rounded-2xl shadow-2xl border border-gray-100 p-2 z-50 animate-in fade-in slide-in-from-top-4 duration-300"
                    >
                        <p
                            class="text-[10px] font-bold text-gray-400 uppercase tracking-widest px-3 py-2"
                        >
                            Escolha uma unidade:
                        </p>
                        <a
                            href="https://api.whatsapp.com/send/?phone=559883150020"
                            target="_blank"
                            class="flex items-center gap-3 px-4 py-3 hover:bg-[#e6fcf5] text-[#5b2b86] hover:text-[#00a884] rounded-xl transition-colors font-bold group/item cursor-pointer"
                        >
                            <div class="w-2 h-2 rounded-full bg-[#ff9100]">
                            </div>
                            Unidade Calhau
                        </a>
                        <a
                            href="https://api.whatsapp.com/send/?phone=559896037330"
                            target="_blank"
                            class="flex items-center gap-3 px-4 py-3 hover:bg-[#e6fcf5] text-[#5b2b86] hover:text-[#00a884] rounded-xl transition-colors font-bold group/item cursor-pointer"
                        >
                            <div class="w-2 h-2 rounded-full bg-[#26a9e1]">
                            </div>
                            Unidade Ponta do Farol
                        </a>
                    </div>
                </div>

                <script>
                    const trigger =
                        document.getElementById("unique-cta-trigger");
                    const menu = document.getElementById("unique-cta-menu");
                    const container = document.getElementById(
                        "unique-cta-container",
                    );

                    if (trigger && menu) {
                        trigger.addEventListener("click", (e) => {
                            e.stopPropagation();
                            menu.classList.toggle("hidden");
                        });

                        document.addEventListener("click", (e) => {
                            if (!container?.contains(e.target as Node)) {
                                menu.classList.add("hidden");
                            }
                        });
                    }
                </script>
            </div>

            <!-- Image -->
            <div class="w-full md:w-1/2">
                <div class="relative rounded-[2rem] overflow-hidden shadow-2xl">
                    <Image
                        src={uniqueImage}
                        alt="Barbeiro e criança felizes"
                        class="w-full h-auto object-cover"
                    />
                </div>
            </div>
        </div>
    </div>
</section>
