---
import { Image } from "astro:assets";
import teamPhoto from "../assets/team-photo.webp";

const features = [
    "Ambiente acolhedor",
    "Profissionais Experientes",
    "Acessibilidade completa",
    "Decoração Temática",
    "Estacionamento Prático",
    "Atividades Interativas",
];
---

<section class="py-20 bg-white overflow-hidden">
    <div class="container mx-auto px-6">
        <div class="flex flex-col lg:flex-row items-center gap-12">
            <!-- Text Content -->
            <div class="w-full lg:w-1/2 space-y-8">
                <h2
                    class="text-4xl md:text-5xl font-bold text-[#5b2b86] leading-tight"
                >
                    Aqui seu pequeno é tratado com carinho, amor <br
                        class="hidden md:block"
                    />
                    e muito profissionalismo.
                </h2>

                <div class="h-1 w-24 bg-[#ff9100] rounded-full"></div>

                <ul class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-8">
                    {
                        features.map((feature) => (
                            <li class="flex items-center gap-3">
                                <span class="w-3 h-3 rounded-full bg-[#9d4edd] flex-shrink-0" />
                                <span class="text-gray-600 font-medium">
                                    {feature}
                                </span>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Image -->
            <div class="w-full lg:w-1/2">
                <div
                    class="relative rounded-3xl overflow-hidden shadow-2xl transform rotate-1 hover:rotate-0 transition duration-500"
                >
                    <div
                        class="absolute inset-0 bg-gradient-to-tr from-[#5b2b86]/20 to-transparent pointer-events-none"
                    >
                    </div>
                    <Image
                        src={teamPhoto}
                        alt="Equipe Studio Encantado"
                        class="w-full h-auto object-cover"
                    />
                </div>
            </div>
        </div>
    </div>
</section>
